@model List<Lesson.Domain.LessonsOfClassRoom.Dto.LessonOfClassRoomFullOutPut>
@using Abp.Web.Mvc.Extensions
@{
    ViewBag.Title = L("Students");
    ViewBag.ActiveMenu = "MyLessons";
}
@section scripts
{
    @Html.IncludeScript("~/Views/Lessons/LessonOfClassRoom.js")
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @L("LessonList")
                </h2> 
            </div>
            <div class="body table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ClassRoom Name</th>
                            <th>Lesson Name</th>
                            <th>Teacher</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var lesson in Model)
                        {
                            <tr>
                                <td>@lesson.ClassRoom.Name</td>
                                <td>@lesson.Lesson.Name</td>
                                <td>@lesson.User.Name @lesson.User.Surname</td> 
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
