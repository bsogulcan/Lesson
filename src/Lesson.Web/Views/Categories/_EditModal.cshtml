@using Lesson.Web.Models.Common.Modals
@model Lesson.Web.Models.Categories.EditCategoryModalViewModel
@{ Layout = null; }
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditRole")))

<div class="modal-body">
    <form name="RoleEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="rolename" type="text" name="Name" value="@Model.Name" required maxlength="32" minlength="2" class="validate form-control">
                        <label for="rolename" class="form-label">@L("RoleName")</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/Views/Categories/_EditModal.js"></script>